{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://simulator.stellar.org/schemas/v1/common.schema.json",
  "version": "1.0.0",
  "title": "Common Schema Definitions",
  "description": "Shared type definitions used across simulator schemas",
  "$defs": {
    "Version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version string (e.g., 1.0.0)"
    },
    "XDRBase64": {
      "type": "string",
      "contentEncoding": "base64",
      "pattern": "^[A-Za-z0-9+/]+={0,2}$",
      "description": "Base64-encoded XDR payload"
    }
  }
}
